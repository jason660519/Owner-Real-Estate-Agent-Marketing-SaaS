{
  "mcpServers": {
    "mcp-copilot-conta": {
      "command": "npx",
      "args": [
        "@copilot-extensions/mcp-copilot-conta",
        "--default-mount",
        "/Users/jason66/Owner Real Estate Agent SaaS"
      ],
      "description": "Docker container management for development environment and deployment"
    },
    "mermaid-server": {
      "command": "npx",
      "args": [
        "@raymonddeng99/mermaid-mcp"
      ],
      "description": "Mermaid diagram creation and validation for system architecture documentation"
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "/Users/jason66/Owner Real Estate Agent SaaS"
      ],
      "description": "File system access for project management and code editing"
    },
    "fetch": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-fetch"
      ],
      "description": "Web content fetching for documentation research and third-party service integration"
    },
    "postgres": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-postgres"
      ],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${POSTGRES_CONNECTION_STRING}"
      },
      "description": "PostgreSQL database management for property data, user management, and financial records"
    },
    "github": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}",
        "GITHUB_OWNER": "${GITHUB_OWNER}",
        "GITHUB_REPO": "${GITHUB_REPO}"
      },
      "description": "GitHub repository management for version control and collaboration"
    },
    "sqlite": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-sqlite"
      ],
      "env": {
        "SQLITE_DB_PATH": "${SQLITE_DB_PATH}"
      },
      "description": "SQLite database for local development and testing"
    },
    "brave-search": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "description": "Market research for competitive analysis and real estate trend data"
    }
  },
  "projectSettings": {
    "name": "Owner Real Estate Agent SaaS",
    "description": "房東物件管理語音 AI App - Multi-platform SaaS solution for property management",
    "workingDirectory": "/Users/jason66/Owner Real Estate Agent SaaS",
    "primaryLanguages": ["TypeScript", "React Native", "Python"],
    "frameworks": ["Expo", "Supabase", "Rasa"],
    "targetMarkets": ["Australia", "Taiwan"],
    "developmentPhase": "MVP Planning"
  },
  "aiAssistanceConfig": {
    "primaryFocus": [
      "Property management workflow automation",
      "AI chatbot development",
      "Multi-tenant SaaS architecture",
      "Financial reporting and compliance",
      "Real estate legal document automation"
    ],
    "codeStyle": {
      "typescript": "strict",
      "react": "functional components with hooks",
      "python": "type hints enabled",
      "documentation": "comprehensive inline comments"
    },
    "testingStrategy": "TDD with Jest and Playwright",
    "deploymentStrategy": "Multi-stage: Development -> Staging -> Production"
  }
}